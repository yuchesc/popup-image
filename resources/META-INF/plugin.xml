<idea-plugin>
  <id>com.yuchesc.intellij.popup_image</id>
  <name>Popup Image</name>
  <version>1.0</version>
  <vendor email="yuchesc@gmail.com" url="http://yuchesc.com">Yuchesc</vendor>

  <description><![CDATA[
      It shows a local image on popup when you select relative path in source code.<br>
      Supported extensions are jpg, jpeg, png, and gif.<br>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="PopupImageAction" class="com.yuchesc.intellij.popup_image.PopupImageAction" text="PopupImage">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl C" second-keystroke="ctrl L"/>
    </action>
  </actions>

</idea-plugin>